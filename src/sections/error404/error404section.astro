---
import { Image } from 'astro:assets';
import { Logo } from '@Assets';
import { BaseLink, BaseText, BaseTextTypes } from '@BaseComponents';
import { SectionsLayout } from '@Layouts';
---

<SectionsLayout class="section-error">
  <Image
    src={Logo}
    alt="Benedetti Elétrica"
  />
  <BaseText
    tag={BaseTextTypes.TAGS.H1}
    variation="blue"
  >
    Página não encontrada
  </BaseText>

  <BaseText>
    Desculpe, a página que procurava não está disponível no momento ou não
    existe.
  </BaseText>

  <BaseLink
    href="/"
    variation="blue"
  >
    Retornar
  </BaseLink>
</SectionsLayout>

<style>
  .section-error {
    @apply flex h-screen flex-col items-center justify-center gap-6 text-center;
  }
</style>
