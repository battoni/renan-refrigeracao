---
interface Props {
  class?: string;
  variation?: string;
}

const { class: className, variation } = Astro.props;

const dynamicClasses = [className, variation ? `is-${variation}` : ''];
---

<div class:list={['card', dynamicClasses]}>
  <slot />
</div>

<style>
  .card {
    @apply mb-6 
    flex
    min-h-fit
    max-w-[430px]
    flex-col
    rounded-[15px] 
    border-2 
    border-solid
    border-transparent
    bg-gray
    p-10
    shadow-[6px_4px_4px_0px_rgba(0,0,0,0.25)]
    transition-all
    ease-in-out
    hover:border-navyBlue;
  }

  .is-service {
    @apply rounded-[0]
    border-0
    bg-transparent
    p-0
    shadow-none
    hover:border-0;
  }
</style>
