---
import { TheFooter, TheNavBar, TheGTag } from '@UniqueComponents';
import DependenciesLayout from './DependenciesLayout.astro';
import ScriptsLayout from './ScriptsLayout.astro';

export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const props = {
  title:
    title ?? 'Renan Refrigeração | Serviços de Refrigeração e Climatização',
  description:
    description ??
    'Procurando por montagem e manutenção de câmara fria, freezer, expositor, geladeira ou outros serviços de refrigeração? Solicite um orçamento agora mesmo!',
};
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <ScriptsLayout />
    <meta
      content="text/html; charset=utf-8"
      http-equiv="Content-Type"
    />
    <link
      href="/favicon/favicon.ico"
      rel="icon"
      type="image/x-icon"
    />
    <meta
      content={props.title}
      name="title"
    />
    <meta
      content={props.description}
      name="description"
    />
    <meta
      content="width=device-width"
      name="viewport"
    />
    <meta
      content={Astro.generator}
      name="generator"
    />
    <link
      href="/sitemap-index.xml"
      rel="sitemap"
    />
    <title>{props.title}</title>

    <link
      href="/favicon/apple-icon-57x57.png"
      rel="apple-touch-icon"
      sizes="57x57"
    />
    <link
      href="/favicon/apple-icon-60x60.png"
      rel="apple-touch-icon"
      sizes="60x60"
    />
    <link
      href="/favicon/apple-icon-72x72.png"
      rel="apple-touch-icon"
      sizes="72x72"
    />
    <link
      href="/favicon/apple-icon-76x76.png"
      rel="apple-touch-icon"
      sizes="76x76"
    />
    <link
      href="/favicon/apple-icon-114x114.png"
      rel="apple-touch-icon"
      sizes="114x114"
    />
    <link
      href="/favicon/apple-icon-120x120.png"
      rel="apple-touch-icon"
      sizes="120x120"
    />
    <link
      href="/favicon/apple-icon-144x144.png"
      rel="apple-touch-icon"
      sizes="144x144"
    />
    <link
      href="/favicon/apple-icon-152x152.png"
      rel="apple-touch-icon"
      sizes="152x152"
    />
    <link
      href="/favicon/apple-icon-180x180.png"
      rel="apple-touch-icon"
      sizes="180x180"
    />
    <link
      href="/favicon/android-icon-192x192.png"
      rel="icon"
      sizes="192x192"
      type="image/png"
    />
    <link
      href="/favicon/favicon/favicon-32x32.png"
      rel="icon"
      sizes="32x32"
      type="image/png"
    />
    <link
      href="/favicon/favicon-96x96.png"
      rel="icon"
      sizes="96x96"
      type="image/png"
    />
    <link
      href="/favicon/favicon-16x16.png"
      rel="icon"
      sizes="16x16"
      type="image/png"
    />
    <link
      href="/favicon/manifest.json"
      rel="manifest"
    />

    <!-- Open Graph / Facebook -->
    <meta
      content="website"
      property="og:type"
    />
    <meta
      content="https://renanrefrigeracao.com.br"
      property="og:url"
    />
    <meta
      content={props.title}
      property="og:title"
    />
    <meta
      content={props.description}
      property="og:description"
    />
    <meta
      content="https://renanrefrigeracao.com.br/renan-refrigeracao-share-thumb.png"
      property="og:image"
    />

    <!-- Twitter -->
    <meta
      content="summary_large_image"
      property="twitter:card"
    />
    <meta
      content="https://renanrefrigeracao.com.br"
      property="twitter:url"
    />
    <meta
      content="Renan Refrigeração | Serviços de Refrigeração e Climatização"
      property="twitter:title"
    />
    <meta
      content={props.description}
      property="twitter:description"
    />
    <meta
      content="https://renanrefrigeracao.com.br/renan-refrigeracao-share-thumb.png"
      property="twitter:image"
    />
  </head>

  <body class="body">
    <TheGTag />

    <DependenciesLayout>
      <TheNavBar />

      <main class="main">
        <slot />
      </main>

      <TheFooter />
    </DependenciesLayout>
  </body>
</html>

<style>
  .body {
    @apply flex min-h-screen flex-col items-center overflow-x-hidden;
  }

  .main {
    @apply w-screen;
  }
</style>